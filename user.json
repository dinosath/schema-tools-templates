{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "type": "object",
  "title": "user",
  "properties": {
    "id":{
      "type": "string",
      "format": "uuid"
    },
    "name": {
      "type": "string",
      "minLength": 2,
      "maxLength": 33
    },
    "age": {
      "type": "integer",
      "minimum": 0
    },
    "address": {
      "type": "object",
      "x-persist": "true",
      "properties": {
        "street": {
          "type": "string"
        },
        "city": {
          "type": "string"
        },
        "zipcode": {
          "type": "string"
        }
      },
      "required": ["street", "city"]
    }
  },
  "required": ["name", "address"]
}
