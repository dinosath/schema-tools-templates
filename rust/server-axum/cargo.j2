{# type=static,filename=Cargo.toml,min_version=0.5.0 #}
[package]
name = "schema-tools-tests"
version = "0.1.0"
authors = ["Kacper Stasik <kacper@stasik.eu>"]
edition = "2021"


[dependencies]
tokio = { version = "1.0", features = ["full"] }
axum = "0.6"
bb8 = "0.8"
diesel = "2"
diesel-async = { version = "0.4", features = ["postgres", "bb8"] }
dotenv = "0.15.0"
serde = { version = "1.0", features = ["derive"] }
serde_json = "1.0"
uuid = { version = "1.3", features = ["serde", "v4"] }
validator = { version = "0.16", features = ["derive"] }
lazy_static = "1.4.0"
chrono = { version = "0.4", features = ["serde"] }
tracing = "0.1"
tracing-subscriber = { version = "0.3", features = ["env-filter"] }
tracing-opentelemetry = "0.21"
opentelemetry = { version = "0.20", features = ["rt-tokio", "trace", "metrics"] }
opentelemetry-otlp = { version = "0.13", features = ["tonic", "metrics"] }